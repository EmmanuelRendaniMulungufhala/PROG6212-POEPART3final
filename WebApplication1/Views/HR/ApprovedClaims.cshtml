@model List<ClaimModel>
@{
    ViewData["Title"] = "Approved Claims";
    var monthFilter = Context.Request.Query["month"].ToString();
    var lecturerFilter = Context.Request.Query["lecturer"].ToString();
    var departmentFilter = Context.Request.Query["department"].ToString();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="HR" asp-action="Dashboard">HR Dashboard</a></li>
                    <li class="breadcrumb-item active">Approved Claims</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-check-circle text-success me-2"></i>Approved Claims
                    </h2>
                    <p class="text-muted mb-0">View all approved claims and payment information</p>
                </div>
                <div class="text-end">
                    <div class="h4 text-success mb-1">
                        @if (Model.Any())
                        {
                            @Model.Sum(c => c.TotalAmount).ToString("C")
                        }
                        else
                        {
                            <text>R0.00</text>
                        }
                    </div>
                    <small class="text-muted">Total Approved Amount</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Count</div>
                            <div>Total Approved</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Count(c => c.ApprovalDate?.Month == DateTime.Now.Month)</div>
                            <div>Approved This Month</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Select(c => c.LecturerId).Distinct().Count()</div>
                            <div>Unique Lecturers</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">
                                @if (Model.Any())
                                {
                                    @Model.Average(c => c.TotalAmount).ToString("C")
                                }
                                else
                                {
                                    <text>R0.00</text>
                                }
                            </div>
                            <div>Average Claim</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter me-2"></i>Filter Claims
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="monthFilter" class="form-label">Month</label>
                    <input type="month" id="monthFilter" name="month" value="@monthFilter"
                           class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="lecturerFilter" class="form-label">Lecturer</label>
                    <input type="text" id="lecturerFilter" name="lecturer" value="@lecturerFilter"
                           class="form-control" placeholder="Search lecturer..." />
                </div>
                <div class="col-md-3">
                    <label for="departmentFilter" class="form-label">Department</label>
                    <select id="departmentFilter" name="department" class="form-control">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept" selected="@(dept == departmentFilter)">@dept</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label d-block">&nbsp;</label>
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>Apply Filters
                    </button>
                    <a asp-action="ApprovedClaims" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                Approved Claims List
                <span class="badge bg-success ms-2">@Model.Count claims</span>
            </h5>
            <div class="d-flex gap-2">
                <a asp-action="GeneratePaymentReport"
                   asp-route-startDate="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")"
                   asp-route-endDate="@DateTime.Now.ToString("yyyy-MM-dd")"
                   class="btn btn-success btn-sm">
                    <i class="fas fa-file-export me-1"></i>Export Report
                </a>
                <a asp-controller="HR" asp-action="ProcessClaims" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-tasks me-1"></i>Process Claims
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Approved Date</th>
                                <th>Approved By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-success rounded-circle text-white d-flex align-items-center justify-content-center me-3">
                                                @if (claim.Lecturer?.FirstName != null && claim.Lecturer?.LastName != null)
                                                {
                                                    @($"{claim.Lecturer.FirstName[0]}{claim.Lecturer.LastName[0]}")
                                                }
                                                else
                                                {
                                                    <text>??</text>
                                                }
                                            </div>
                                            <div>
                                                <strong>@(claim.Lecturer?.FullName ?? "Unknown Lecturer")</strong>
                                                <br />
                                                <small class="text-muted">@(claim.Lecturer?.Email ?? "Unknown Email")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(claim.Lecturer?.Department ?? "Unknown Department")</span>
                                    </td>
                                    <td>
                                        <strong>@claim.FormattedMonth</strong>
                                    </td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>
                                        <strong class="text-success">@claim.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <small>@claim.SubmissionDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (claim.ApprovalDate.HasValue)
                                        {
                                            <small class="text-success">
                                                <i class="fas fa-calendar-check me-1"></i>
                                                @claim.ApprovalDate.Value.ToString("MMM dd, yyyy")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@(claim.ReviewedBy ?? "Unknown")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-warning"
                                                    data-bs-toggle="modal" data-bs-target="#updateStatusModal"
                                                    data-claim-id="@claim.Id" data-claim-name="@(claim.Lecturer?.FullName ?? "Unknown Lecturer")"
                                                    data-current-status="@claim.Status"
                                                    title="Update Status">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <a asp-action="DownloadClaimReport" asp-route-id="@claim.Id"
                                               class="btn btn-outline-success" title="Download Report">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end"><strong>Total:</strong></td>
                                <td>
                                    <strong class="text-success">
                                        @if (Model.Any())
                                        {
                                            @Model.Sum(c => c.TotalAmount).ToString("C")
                                        }
                                        else
                                        {
                                            <text>R0.00</text>
                                        }
                                    </strong>
                                </td>
                                <td colspan="4"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-check-circle fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No Approved Claims Found</h5>
                    <p class="text-muted">There are no approved claims matching your current filters.</p>
                    <a asp-action="ApprovedClaims" class="btn btn-outline-primary">
                        <i class="fas fa-redo me-1"></i>Clear Filters
                    </a>
                    <a asp-controller="HR" asp-action="ProcessClaims" class="btn btn-primary">
                        <i class="fas fa-tasks me-1"></i>Process Pending Claims
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Update Status Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Claim Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateClaimStatus" method="post">
                <div class="modal-body">
                    <p>Update status for claim by <strong id="updateLecturerName"></strong></p>
                    <input type="hidden" id="updateClaimId" name="claimId" />
                    <div class="mb-3">
                        <label for="status" class="form-label">New Status</label>
                        <select id="status" name="status" class="form-control" required>
                            <option value="">Select Status</option>
                            <option value="Pending">Pending</option>
                            <option value="UnderReview">Under Review</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea id="notes" name="notes" class="form-control" rows="3"
                                  placeholder="Add notes about this status change..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Update Status</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update status modal
            var updateStatusModal = document.getElementById('updateStatusModal');
            if (updateStatusModal) {
                updateStatusModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var claimId = button.getAttribute('data-claim-id');
                    var lecturerName = button.getAttribute('data-claim-name');
                    var currentStatus = button.getAttribute('data-current-status');

                    document.getElementById('updateClaimId').value = claimId;
                    document.getElementById('updateLecturerName').textContent = lecturerName;

                    var statusSelect = document.getElementById('status');
                    statusSelect.value = currentStatus;
                });
            }
        });
    </script>
}

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 14px;
        font-weight: 600;
    }

    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
</style>