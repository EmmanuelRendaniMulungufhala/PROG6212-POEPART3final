@model List<ClaimModel>
@{
    ViewData["Title"] = "Rejected Claims";
    var monthFilter = Context.Request.Query["month"].ToString();
    var lecturerFilter = Context.Request.Query["lecturer"].ToString();
    var departmentFilter = Context.Request.Query["department"].ToString();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="HR" asp-action="Dashboard">HR Dashboard</a></li>
                    <li class="breadcrumb-item active">Rejected Claims</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-times-circle text-danger me-2"></i>Rejected Claims
                    </h2>
                    <p class="text-muted mb-0">Review and manage rejected claims</p>
                </div>
                <div class="text-end">
                    <div class="h4 text-danger mb-1">
                        @if (Model.Any())
                        {
                            @Model.Count
                        }
                        else
                        {
                            <text>0</text>
                        }
                    </div>
                    <small class="text-muted">Total Rejected Claims</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Count</div>
                            <div>Total Rejected</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Count(c => c.LastStatusUpdateDate?.Month == DateTime.Now.Month)</div>
                            <div>Rejected This Month</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-times fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Select(c => c.LecturerId).Distinct().Count()</div>
                            <div>Affected Lecturers</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">
                                @if (Model.Any())
                                {
                                    @Model.Average(c => c.TotalAmount).ToString("C")
                                }
                                else
                                {
                                    <text>R0.00</text>
                                }
                            </div>
                            <div>Average Claim Value</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter me-2"></i>Filter Claims
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="monthFilter" class="form-label">Month</label>
                    <input type="month" id="monthFilter" name="month" value="@monthFilter"
                           class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="lecturerFilter" class="form-label">Lecturer</label>
                    <input type="text" id="lecturerFilter" name="lecturer" value="@lecturerFilter"
                           class="form-control" placeholder="Search lecturer..." />
                </div>
                <div class="col-md-3">
                    <label for="departmentFilter" class="form-label">Department</label>
                    <select id="departmentFilter" name="department" class="form-control">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept" selected="@(dept == departmentFilter)">@dept</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label d-block">&nbsp;</label>
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>Apply Filters
                    </button>
                    <a asp-action="RejectedClaims" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                Rejected Claims List
                <span class="badge bg-danger ms-2">@Model.Count claims</span>
            </h5>
            <div class="d-flex gap-2">
                <a asp-controller="HR" asp-action="ProcessClaims" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-tasks me-1"></i>Process Claims
                </a>
                <a asp-controller="HR" asp-action="ApprovedClaims" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-check-circle me-1"></i>View Approved
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Rejected Date</th>
                                <th>Rejected By</th>
                                <th>Rejection Reason</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-danger rounded-circle text-white d-flex align-items-center justify-content-center me-3">
                                                @if (claim.Lecturer?.FirstName != null && claim.Lecturer?.LastName != null)
                                                {
                                                    @($"{claim.Lecturer.FirstName[0]}{claim.Lecturer.LastName[0]}")
                                                }
                                                else
                                                {
                                                    <text>??</text>
                                                }
                                            </div>
                                            <div>
                                                <strong>@(claim.Lecturer?.FullName ?? "Unknown Lecturer")</strong>
                                                <br />
                                                <small class="text-muted">@(claim.Lecturer?.Email ?? "Unknown Email")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(claim.Lecturer?.Department ?? "Unknown Department")</span>
                                    </td>
                                    <td>
                                        <strong>@claim.FormattedMonth</strong>
                                    </td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>
                                        <strong class="text-danger">@claim.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <small>@claim.SubmissionDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (claim.LastStatusUpdateDate.HasValue)
                                        {
                                            <small class="text-danger">
                                                <i class="fas fa-calendar-times me-1"></i>
                                                @claim.LastStatusUpdateDate.Value.ToString("MMM dd, yyyy")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@(claim.ReviewedBy ?? "Unknown")</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.ReviewNotes))
                                        {
                                            <small class="text-muted" title="@claim.ReviewNotes">
                                                <i class="fas fa-comment me-1"></i>
                                                @(claim.ReviewNotes.Length > 50 ? claim.ReviewNotes.Substring(0, 50) + "..." : claim.ReviewNotes)
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No reason provided</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-warning"
                                                    data-bs-toggle="modal" data-bs-target="#updateStatusModal"
                                                    data-claim-id="@claim.Id" data-claim-name="@(claim.Lecturer?.FullName ?? "Unknown Lecturer")"
                                                    data-current-status="@claim.Status"
                                                    title="Update Status">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            @if (!string.IsNullOrEmpty(claim.ReviewNotes))
                                            {
                                                <button type="button" class="btn btn-outline-info"
                                                        data-bs-toggle="modal" data-bs-target="#rejectionNotesModal"
                                                        data-claim-name="@(claim.Lecturer?.FullName ?? "Unknown Lecturer")"
                                                        data-rejection-notes="@claim.ReviewNotes"
                                                        title="View Rejection Notes">
                                                    <i class="fas fa-sticky-note"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Section -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Rejection Reasons Summary</h6>
                            </div>
                            <div class="card-body">
                                @{
                                    var claimsWithNotes = Model.Where(c => !string.IsNullOrEmpty(c.ReviewNotes)).ToList();
                                }
                                @if (claimsWithNotes.Any())
                                {
                                    <div class="mb-3">
                                        <small class="text-muted">@claimsWithNotes.Count out of @Model.Count claims have rejection notes</small>
                                    </div>
                                    @foreach (var noteGroup in claimsWithNotes.GroupBy(c => c.ReviewNotes).OrderByDescending(g => g.Count()).Take(5))
                                    {
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="text-truncate" style="max-width: 200px;" title="@noteGroup.Key">
                                                @(noteGroup.Key.Length > 30 ? noteGroup.Key.Substring(0, 30) + "..." : noteGroup.Key)
                                            </span>
                                            <span class="badge bg-danger">@noteGroup.Count()</span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">No rejection notes available</p>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Rejected by Department</h6>
                            </div>
                            <div class="card-body">
                                @foreach (var deptGroup in Model.GroupBy(c => c.Lecturer?.Department ?? "Unknown").OrderByDescending(g => g.Count()))
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span>@deptGroup.Key</span>
                                        <div>
                                            <span class="badge bg-danger me-2">@deptGroup.Count() claims</span>
                                            <span class="text-danger">@deptGroup.Sum(c => c.TotalAmount).ToString("C")</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-times-circle fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No Rejected Claims Found</h5>
                    <p class="text-muted">There are no rejected claims matching your current filters.</p>
                    <a asp-action="RejectedClaims" class="btn btn-outline-primary">
                        <i class="fas fa-redo me-1"></i>Clear Filters
                    </a>
                    <a asp-controller="HR" asp-action="ProcessClaims" class="btn btn-primary">
                        <i class="fas fa-tasks me-1"></i>Process Claims
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Update Status Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Claim Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateClaimStatus" method="post">
                <div class="modal-body">
                    <p>Update status for claim by <strong id="updateLecturerName"></strong></p>
                    <input type="hidden" id="updateClaimId" name="claimId" />
                    <div class="mb-3">
                        <label for="status" class="form-label">New Status</label>
                        <select id="status" name="status" class="form-control" required>
                            <option value="">Select Status</option>
                            <option value="Pending">Pending</option>
                            <option value="UnderReview">Under Review</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea id="notes" name="notes" class="form-control" rows="3"
                                  placeholder="Add notes about this status change..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Update Status</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rejection Notes Modal -->
<div class="modal fade" id="rejectionNotesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rejection Notes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Rejection notes for claim by <strong id="rejectionLecturerName"></strong>:</p>
                <div class="border rounded p-3 bg-light">
                    <p id="rejectionNotesContent" class="mb-0"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update status modal
            var updateStatusModal = document.getElementById('updateStatusModal');
            if (updateStatusModal) {
                updateStatusModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var claimId = button.getAttribute('data-claim-id');
                    var lecturerName = button.getAttribute('data-claim-name');
                    var currentStatus = button.getAttribute('data-current-status');

                    document.getElementById('updateClaimId').value = claimId;
                    document.getElementById('updateLecturerName').textContent = lecturerName;

                    var statusSelect = document.getElementById('status');
                    statusSelect.value = currentStatus;
                });
            }

            // Rejection notes modal
            var rejectionNotesModal = document.getElementById('rejectionNotesModal');
            if (rejectionNotesModal) {
                rejectionNotesModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var lecturerName = button.getAttribute('data-claim-name');
                    var rejectionNotes = button.getAttribute('data-rejection-notes');

                    document.getElementById('rejectionLecturerName').textContent = lecturerName;
                    document.getElementById('rejectionNotesContent').textContent = rejectionNotes;
                });
            }
        });
    </script>
}

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 14px;
        font-weight: 600;
    }

    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
</style>