@model List<ClaimModel>
@{
    ViewData["Title"] = "Pending Claims";
    var monthFilter = Context.Request.Query["month"].ToString();
    var lecturerFilter = Context.Request.Query["lecturer"].ToString();
    var departmentFilter = Context.Request.Query["department"].ToString();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="HR" asp-action="Dashboard">HR Dashboard</a></li>
                    <li class="breadcrumb-item active">Pending Claims</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-clock text-warning me-2"></i>Pending Claims
                    </h2>
                    <p class="text-muted mb-0">Review and process pending claims awaiting approval</p>
                </div>
                <div class="text-end">
                    <div class="h4 text-warning mb-1">
                        @if (Model.Any())
                        {
                            @Model.Count
                        }
                        else
                        {
                            <text>0</text>
                        }
                    </div>
                    <small class="text-muted">Awaiting Review</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Count</div>
                            <div>Total Pending</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Count(c => c.SubmissionDate.Date == DateTime.Today)</div>
                            <div>Submitted Today</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-day fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">@Model.Select(c => c.LecturerId).Distinct().Count()</div>
                            <div>Lecturers Waiting</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">
                                @if (Model.Any())
                                {
                                    @Model.Sum(c => c.TotalAmount).ToString("C")
                                }
                                else
                                {
                                    <text>R0.00</text>
                                }
                            </div>
                            <div>Total Value</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Urgent Claims Alert -->
    @{
        var oldClaims = Model.Where(c => (DateTime.Now - c.SubmissionDate).TotalDays > 7).ToList();
    }
    @if (oldClaims.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <h5 class="alert-heading">
                <i class="fas fa-exclamation-triangle me-2"></i>Attention Required
            </h5>
            <p class="mb-2">
                There are <strong>@oldClaims.Count</strong> claims pending for more than 7 days that require immediate review.
            </p>
            <div class="mb-2">
                <strong>Oldest claims:</strong>
                @foreach (var claim in oldClaims.OrderBy(c => c.SubmissionDate).Take(3))
                {
                    <span class="badge bg-danger me-2">
                        @(claim.Lecturer?.FullName ?? "Unknown"): @((DateTime.Now - claim.SubmissionDate).Days)d
                    </span>
                }
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter me-2"></i>Filter Claims
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="monthFilter" class="form-label">Month</label>
                    <input type="month" id="monthFilter" name="month" value="@monthFilter"
                           class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="lecturerFilter" class="form-label">Lecturer</label>
                    <input type="text" id="lecturerFilter" name="lecturer" value="@lecturerFilter"
                           class="form-control" placeholder="Search lecturer..." />
                </div>
                <div class="col-md-3">
                    <label for="departmentFilter" class="form-label">Department</label>
                    <select id="departmentFilter" name="department" class="form-control">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept" selected="@(dept == departmentFilter)">@dept</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label d-block">&nbsp;</label>
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>Apply Filters
                    </button>
                    <a asp-action="PendingClaims" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                Pending Claims List
                <span class="badge bg-warning ms-2">@Model.Count claims</span>
            </h5>
            <div class="d-flex gap-2">
                <a asp-controller="HR" asp-action="ProcessClaims" class="btn btn-primary btn-sm">
                    <i class="fas fa-tasks me-1"></i>Process All Claims
                </a>
                <a asp-controller="HR" asp-action="ApprovedClaims" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-check-circle me-1"></i>View Approved
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Days Waiting</th>
                                <th>Priority</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderByDescending(c => (DateTime.Now - c.SubmissionDate).TotalDays))
                            {
                                var daysWaiting = (DateTime.Now - claim.SubmissionDate).Days;
                                var isUrgent = daysWaiting > 7;
                                var isHighPriority = daysWaiting > 3;
                                
                                <tr class="@(isUrgent ? "table-warning" : "")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-warning rounded-circle text-white d-flex align-items-center justify-content-center me-3">
                                                @if (claim.Lecturer?.FirstName != null && claim.Lecturer?.LastName != null)
                                                {
                                                    @($"{claim.Lecturer.FirstName[0]}{claim.Lecturer.LastName[0]}")
                                                }
                                                else
                                                {
                                                    <text>??</text>
                                                }
                                            </div>
                                            <div>
                                                <strong>@(claim.Lecturer?.FullName ?? "Unknown Lecturer")</strong>
                                                <br />
                                                <small class="text-muted">@(claim.Lecturer?.Email ?? "Unknown Email")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(claim.Lecturer?.Department ?? "Unknown Department")</span>
                                    </td>
                                    <td>
                                        <strong>@claim.FormattedMonth</strong>
                                    </td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>
                                        <strong class="text-success">@claim.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <small>@claim.SubmissionDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <span class="badge @(isUrgent ? "bg-danger" : isHighPriority ? "bg-warning" : "bg-info")">
                                            @daysWaiting day@(daysWaiting != 1 ? "s" : "")
                                        </span>
                                    </td>
                                    <td>
                                        @if (isUrgent)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Urgent
                                            </span>
                                        }
                                        else if (isHighPriority)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>High
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Normal</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-success"
                                                    data-bs-toggle="modal" data-bs-target="#approveModal"
                                                    data-claim-id="@claim.Id" data-claim-name="@(claim.Lecturer?.FullName ?? "Unknown Lecturer")"
                                                    title="Approve Claim">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger"
                                                    data-bs-toggle="modal" data-bs-target="#rejectModal"
                                                    data-claim-id="@claim.Id" data-claim-name="@(claim.Lecturer?.FullName ?? "Unknown Lecturer")"
                                                    title="Reject Claim">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-info"
                                                    data-bs-toggle="modal" data-bs-target="#reviewModal"
                                                    data-claim-id="@claim.Id" data-claim-name="@(claim.Lecturer?.FullName ?? "Unknown Lecturer")"
                                                    title="Mark for Review">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end"><strong>Total:</strong></td>
                                <td>
                                    <strong class="text-success">
                                        @if (Model.Any())
                                        {
                                            @Model.Sum(c => c.TotalAmount).ToString("C")
                                        }
                                        else
                                        {
                                            <text>R0.00</text>
                                        }
                                    </strong>
                                </td>
                                <td colspan="4"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Summary Section -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Pending by Department</h6>
                            </div>
                            <div class="card-body">
                                @foreach (var deptGroup in Model.GroupBy(c => c.Lecturer?.Department ?? "Unknown").OrderByDescending(g => g.Count()))
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span>@deptGroup.Key</span>
                                        <div>
                                            <span class="badge bg-warning me-2">@deptGroup.Count() claims</span>
                                            <span class="text-success">@deptGroup.Sum(c => c.TotalAmount).ToString("C")</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Processing Time Analysis</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <span class="text-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        @oldClaims.Count claims > 7 days
                                    </span>
                                </div>
                                <div class="mb-2">
                                    <span class="text-warning">
                                        <i class="fas fa-clock me-1"></i>
                                        @Model.Count(c => (DateTime.Now - c.SubmissionDate).TotalDays > 3 && (DateTime.Now - c.SubmissionDate).TotalDays <= 7) claims 3-7 days
                                    </span>
                                </div>
                                <div class="mb-2">
                                    <span class="text-info">
                                        <i class="fas fa-check me-1"></i>
                                        @Model.Count(c => (DateTime.Now - c.SubmissionDate).TotalDays <= 3) claims 3 days
                                    </span>
                                </div>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        Average waiting: @Model.Average(c => (DateTime.Now - c.SubmissionDate).TotalDays).ToString("0.0") days
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-clock fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No Pending Claims Found</h5>
                    <p class="text-muted">All claims have been processed! Great work!</p>
                    <a asp-action="PendingClaims" class="btn btn-outline-primary">
                        <i class="fas fa-redo me-1"></i>Clear Filters
                    </a>
                    <a asp-controller="HR" asp-action="ApprovedClaims" class="btn btn-success">
                        <i class="fas fa-check-circle me-1"></i>View Approved Claims
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ApproveClaim" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve the claim for <strong id="approveLecturerName"></strong>?</p>
                    <input type="hidden" id="approveClaimId" name="claimId" />
                    <div class="mb-3">
                        <label for="approvalNotes" class="form-label">Approval Notes (Optional)</label>
                        <textarea id="approvalNotes" name="approvalNotes" class="form-control" rows="3"
                                  placeholder="Add any notes about this approval..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="RejectClaim" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject the claim for <strong id="rejectLecturerName"></strong>?</p>
                    <input type="hidden" id="rejectClaimId" name="claimId" />
                    <div class="mb-3">
                        <label for="rejectionNotes" class="form-label">Rejection Reason *</label>
                        <textarea id="rejectionNotes" name="rejectionNotes" class="form-control" rows="3"
                                  placeholder="Please provide the reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Mark for Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mark for Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateClaimStatus" method="post">
                <div class="modal-body">
                    <p>Mark claim by <strong id="reviewLecturerName"></strong> for further review?</p>
                    <input type="hidden" id="reviewClaimId" name="claimId" />
                    <input type="hidden" name="status" value="UnderReview" />
                    <div class="mb-3">
                        <label for="reviewNotes" class="form-label">Review Notes</label>
                        <textarea id="reviewNotes" name="notes" class="form-control" rows="3"
                                  placeholder="Add notes about what needs to be reviewed..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-info">Mark for Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Approve modal
            var approveModal = document.getElementById('approveModal');
            if (approveModal) {
                approveModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var claimId = button.getAttribute('data-claim-id');
                    var lecturerName = button.getAttribute('data-claim-name');

                    document.getElementById('approveClaimId').value = claimId;
                    document.getElementById('approveLecturerName').textContent = lecturerName;
                });
            }

            // Reject modal
            var rejectModal = document.getElementById('rejectModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var claimId = button.getAttribute('data-claim-id');
                    var lecturerName = button.getAttribute('data-claim-name');

                    document.getElementById('rejectClaimId').value = claimId;
                    document.getElementById('rejectLecturerName').textContent = lecturerName;
                });
            }

            // Review modal
            var reviewModal = document.getElementById('reviewModal');
            if (reviewModal) {
                reviewModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var claimId = button.getAttribute('data-claim-id');
                    var lecturerName = button.getAttribute('data-claim-name');

                    document.getElementById('reviewClaimId').value = claimId;
                    document.getElementById('reviewLecturerName').textContent = lecturerName;
                });
            }
        });
    </script>
}

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 14px;
        font-weight: 600;
    }
    
    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
    
    .table-warning:hover {
        background-color: rgba(255, 193, 7, 0.3) !important;
    }
</style>