@using WebApplication1.ViewModels
@model PaymentReportViewModel
@{
    ViewData["Title"] = "Payment Report";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Payment Report - @Model.StartDate.ToString("MMM dd, yyyy") to @Model.EndDate.ToString("MMM dd, yyyy")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .header {
            border-bottom: 2px solid #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .summary-card {
            background: #f8f9fa;
            border-left: 4px solid #007bff;
            padding: 15px;
            margin-bottom: 20px;
        }

        .table th {
            background-color: #343a40;
            color: white;
        }

        .total-row {
            font-weight: bold;
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Header -->
        <div class="row header">
            <div class="col-6">
                <h1>Payment Report</h1>
                <p class="lead">Period: @Model.StartDate.ToString("MMM dd, yyyy") to @Model.EndDate.ToString("MMM dd, yyyy")</p>
            </div>
            <div class="col-6 text-end">
                <h3>The IET, The IE</h3>
                <p>Generated on: @Model.GeneratedDate.ToString("MMM dd, yyyy HH:mm")</p>
                <p>Generated by: @Model.GeneratedBy</p>
            </div>
        </div>

        <!-- Summary -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="summary-card">
                    <h5>Total Claims</h5>
                    <h3>@Model.TotalClaims</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="summary-card" style="border-left-color: #28a745;">
                    <h5>Total Amount</h5>
                    <h3>@Model.TotalAmount.ToString("C")</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="summary-card" style="border-left-color: #6c757d;">
                    <h5>Period</h5>
                    <h6>@Model.StartDate.ToString("MMM dd, yyyy")<br />to<br />@Model.EndDate.ToString("MMM dd, yyyy")</h6>
                </div>
            </div>
            <div class="col-md-3">
                <div class="summary-card" style="border-left-color: #ffc107;">
                    <h5>Report Date</h5>
                    <h6>@Model.GeneratedDate.ToString("MMM dd, yyyy")</h6>
                </div>
            </div>
        </div>

        <!-- Claims Table -->
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Lecturer</th>
                            <th>Employee ID</th>
                            <th>Month</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Amount</th>
                            <th>Approved Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Claims.Count; i++)
                        {
                            var claim = Model.Claims[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@claim.Lecturer?.FullName</td>
                                <td>@claim.Lecturer?.EmployeeId</td>
                                <td>@claim.FormattedMonth</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.ApprovalDate?.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="total-row">
                            <td colspan="6" class="text-end"><strong>Total:</strong></td>
                            <td colspan="2"><strong>@Model.TotalAmount.ToString("C")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <!-- Footer -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <hr />
                <p class="text-muted">
                    This is an automated report generated by The IET Claims Management System.
                    For any queries, please contact HR Department.
                </p>
            </div>
        </div>
    </div>

    <script>
        window.onload = function() {
            window.print();
        }
    </script>
</body>
</html>