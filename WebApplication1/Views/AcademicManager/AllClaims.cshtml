@model List<ClaimModel>
@{
    ViewData["Title"] = "All Claims";
    var departments = ViewBag.Departments as List<string> ?? new List<string>();
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-list me-2"></i>All Claims
                </h2>
                <div>
                    <span class="badge bg-warning me-2">@Model.Count(c => c.Status == ClaimStatus.Pending) Pending</span>
                    <span class="badge bg-info">@Model.Count(c => c.Status == ClaimStatus.UnderReview) Under Review</span>
                </div>
            </div>
            <p class="text-muted">View and monitor all claims across all departments</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Filter Claims</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="statusFilter" class="form-label">Status</label>
                        <select id="statusFilter" name="status" class="form-control" onchange="this.form.submit()">
                            <option value="">All Statuses</option>
                            <option value="Pending">Pending</option>
                            <option value="UnderReview">Under Review</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="departmentFilter" class="form-label">Department</label>
                        <select id="departmentFilter" name="department" class="form-control" onchange="this.form.submit()">
                            <option value="">All Departments</option>
                            @foreach (var dept in departments)
                            {
                                <option value="@dept">@dept</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="monthFilter" class="form-label">Month</label>
                        <input type="month" id="monthFilter" name="month" class="form-control" onchange="this.form.submit()" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="lecturerFilter" class="form-label">Lecturer</label>
                        <input type="text" id="lecturerFilter" name="lecturer" class="form-control" placeholder="Search lecturer..." />
                    </div>
                </div>
                <div class="col-12">
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-filter me-1"></i>Apply Filters
                        </button>
                        <a asp-action="AllClaims" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-1"></i>Reset Filters
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Claims List -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Claims Overview (@Model.Count total)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@claim.Lecturer?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@claim.Lecturer?.Email</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@claim.Lecturer?.Department</span>
                                    </td>
                                    <td>@claim.FormattedMonth</td>
                                    <td>@claim.HoursWorked.ToString("F1")</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>
                                        <strong>@claim.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                    </td>
                                    <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="LecturerDetails" asp-route-id="@claim.LecturerId"
                                           class="btn btn-sm btn-outline-info" title="View Lecturer">
                                            <i class="fas fa-user"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h6>Total Amount</h6>
                                <h4>@Model.Sum(c => c.TotalAmount).ToString("C")</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h6>Approved</h6>
                                <h4>@Model.Count(c => c.Status == ClaimStatus.Approved)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h6>Pending</h6>
                                <h4>@Model.Count(c => c.Status == ClaimStatus.Pending)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h6>Departments</h6>
                                <h4>@Model.Select(c => c.Lecturer?.Department).Distinct().Count()</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No claims found</h5>
                    <p class="text-muted">Try adjusting your filters to see more results.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set filter values from URL parameters
            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            const department = urlParams.get('department');
            const month = urlParams.get('month');
            const lecturer = urlParams.get('lecturer');

            if (status) document.getElementById('statusFilter').value = status;
            if (department) document.getElementById('departmentFilter').value = department;
            if (month) document.getElementById('monthFilter').value = month;
            if (lecturer) document.getElementById('lecturerFilter').value = lecturer;
        });
    </script>
}