@using WebApplication1.ViewModels
@model CoordinatorDetailsViewModel
@{
    ViewData["Title"] = "Coordinator Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-user-tie me-2"></i>Coordinator Details
                </h2>
                <a asp-action="ProgrammeCoordinators" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Coordinators
                </a>
            </div>
            <p class="text-muted">View coordinator information and department performance</p>
        </div>
    </div>

    <!-- Coordinator Information -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Coordinator Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Full Name:</th>
                            <td>@Model.Coordinator.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Coordinator.Email</td>
                        </tr>
                        <tr>
                            <th>Phone:</th>
                            <td>@(string.IsNullOrEmpty(Model.Coordinator.PhoneNumber) ? "Not provided" : Model.Coordinator.PhoneNumber)</td>
                        </tr>
                        <tr>
                            <th>Employee ID:</th>
                            <td>@Model.Coordinator.EmployeeId</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Department:</th>
                            <td>
                                <span class="badge bg-info">@Model.Coordinator.Department</span>
                            </td>
                        </tr>
                        <tr>
                            <th>Date Joined:</th>
                            <td>@Model.Coordinator.DateJoined.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <th>Role:</th>
                            <td>
                                <span class="badge bg-primary">@Model.Coordinator.Role</span>
                            </td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (Model.Coordinator.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Statistics -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Department Claims Statistics - @Model.Coordinator.Department</h5>
        </div>
        <div class="card-body">
            @if (Model.DepartmentStats.Any())
            {
                <div class="row">
                    @foreach (var stat in Model.DepartmentStats)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card text-white @(stat.Key == "Approved" ? "bg-success" : stat.Key == "Pending" ? "bg-warning" : stat.Key == "Rejected" ? "bg-danger" : "bg-info")">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@stat.Key</h5>
                                    <h2>@stat.Value.Count</h2>
                                    <p class="card-text">@stat.Value.Amount.ToString("C")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Detailed Statistics -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h5>Detailed Claims Breakdown</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Claim Count</th>
                                        <th>Total Amount</th>
                                        <th>Average per Claim</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stat in Model.DepartmentStats)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge @(stat.Key == "Approved" ? "bg-success" : stat.Key == "Pending" ? "bg-warning" : stat.Key == "Rejected" ? "bg-danger" : "bg-info")">
                                                    @stat.Key
                                                </span>
                                            </td>
                                            <td>@stat.Value.Count</td>
                                            <td>@stat.Value.Amount.ToString("C")</td>
                                            <td>
                                                @((stat.Value.Count > 0 ? stat.Value.Amount / stat.Value.Count : 0).ToString("C"))
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-secondary">
                                        <td><strong>Total</strong></td>
                                        <td><strong>@Model.DepartmentStats.Sum(s => s.Value.Count)</strong></td>
                                        <td><strong>@Model.DepartmentStats.Sum(s => s.Value.Amount).ToString("C")</strong></td>
                                        <td><strong>@((Model.DepartmentStats.Sum(s => s.Value.Count) > 0 ? Model.DepartmentStats.Sum(s => s.Value.Amount) / Model.DepartmentStats.Sum(s => s.Value.Count) : 0).ToString("C"))</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="AllClaims" asp-route-department="@Model.Coordinator.Department"
                               class="btn btn-primary">
                                <i class="fas fa-list me-1"></i>View Department Claims
                            </a>
                            <a asp-action="AllLecturers" asp-route-department="@Model.Coordinator.Department"
                               class="btn btn-success">
                                <i class="fas fa-users me-1"></i>View Department Lecturers
                            </a>
                            <a asp-action="DepartmentAnalytics"
                               class="btn btn-info">
                                <i class="fas fa-chart-bar me-1"></i>View Analytics
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Claims Data Available</h5>
                    <p class="text-muted">No claims have been submitted in @Model.Coordinator.Department department yet.</p>
                    <a asp-action="AllClaims" asp-route-department="@Model.Coordinator.Department"
                       class="btn btn-primary">
                        <i class="fas fa-list me-1"></i>View Department Claims
                    </a>
                </div>
            }
        </div>
    </div>
</div>