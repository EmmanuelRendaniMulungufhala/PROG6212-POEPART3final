@using Microsoft.EntityFrameworkCore
@using WebApplication1.Data
@model List<ApplicationUser>
@{
    ViewData["Title"] = "Programme Coordinators";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-user-tie me-2"></i>Programme Coordinators
                </h2>
                <span class="badge bg-primary">@Model.Count Active Coordinators</span>
            </div>
            <p class="text-muted">Manage and monitor programme coordinators across departments</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Coordinators List</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Employee ID</th>
                                <th>Date Joined</th>
                                <th>Department Claims</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coordinator in Model)
                            {
                                var deptClaims = await Context.RequestServices.GetService<ApplicationDbContext>()
                                .Claims.CountAsync(c => c.Lecturer!.Department == coordinator.Department);
                                var pendingDeptClaims = await Context.RequestServices.GetService<ApplicationDbContext>()
                                .Claims.CountAsync(c => c.Lecturer!.Department == coordinator.Department && c.Status == ClaimStatus.Pending);
                                var deptLecturers = await Context.RequestServices.GetService<ApplicationDbContext>()
                                .Users.CountAsync(u => u.Department == coordinator.Department && u.Role == UserRole.Lecturer && u.IsActive);

                                <tr>
                                    <td>
                                        <strong>@coordinator.FullName</strong>
                                    </td>
                                    <td>@coordinator.Email</td>
                                    <td>
                                        <span class="badge bg-info">@coordinator.Department</span>
                                    </td>
                                    <td>@coordinator.EmployeeId</td>
                                    <td>@coordinator.DateJoined.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div>
                                            <span class="badge bg-primary">@deptClaims Total Claims</span>
                                            <br />
                                            <small>
                                                <span class="badge bg-warning">@pendingDeptClaims Pending</span>
                                                <span class="badge bg-secondary">@deptLecturers Lecturers</span>
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-action="CoordinatorDetails" asp-route-id="@coordinator.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                        <a asp-action="AllClaims" asp-route-department="@coordinator.Department"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-list me-1"></i>Department Claims
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Department Performance -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h5>Department Performance Overview</h5>
                        <div class="row">
                            @foreach (var coordinator in Model)
                            {
                                var deptApprovedAmount = await Context.RequestServices.GetService<ApplicationDbContext>()
                                .Claims.Where(c => c.Lecturer!.Department == coordinator.Department && c.Status == ClaimStatus.Approved)
                                .SumAsync(c => c.TotalAmount);
                                var deptApprovedClaims = await Context.RequestServices.GetService<ApplicationDbContext>()
                                .Claims.CountAsync(c => c.Lecturer!.Department == coordinator.Department && c.Status == ClaimStatus.Approved);

                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@coordinator.Department</h6>
                                            <p class="mb-1">Coordinator: <strong>@coordinator.FullName</strong></p>
                                            <p class="mb-1">Approved Amount: <span class="text-success">@deptApprovedAmount.ToString("C")</span></p>
                                            <p class="mb-0">Approved Claims: <span class="badge bg-success">@deptApprovedClaims</span></p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No programme coordinators found</h5>
                    <p class="text-muted">There are currently no active programme coordinators in the system.</p>
                </div>
            }
        </div>
    </div>
</div>