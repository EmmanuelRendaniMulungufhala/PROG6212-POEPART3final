                margin-left: 1px;
            }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Claims Status Chart
        var ctx = document.getElementById('claimsStatusChart').getContext('2d');
        var claimsStatusChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Pending', 'Approved', 'Rejected', 'Under Review'],
                datasets: [{
                    data: [
                        @Model.PendingClaims,
                        @Model.ApprovedClaims,
                        @Model.RejectedClaims,
                        @Model.UnderReviewClaims
                    ],
                    backgroundColor: [
                        '#ffc107',
                        '#198754',
                        '#dc3545',
                        '#0dcaf0'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Modal handlers
        document.addEventListener('DOMContentLoaded', function() {
            // Approve claim
            document.querySelectorAll('.approve-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const claimId = this.dataset.claimId;
                    const lecturerName = this.dataset.lecturerName;
                    const department = this.dataset.department;

                    document.getElementById('approveLecturerName').textContent = lecturerName;
                    document.getElementById('approveDepartment').textContent = department;
                    document.getElementById('approveClaimId').value = claimId;

                    const approveModal = new bootstrap.Modal(document.getElementById('approveModal'));
                    approveModal.show();
                });
            });

            // Reject claim
            document.querySelectorAll('.reject-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const claimId = this.dataset.claimId;
                    const lecturerName = this.dataset.lecturerName;
                    const department = this.dataset.department;

                    document.getElementById('rejectLecturerName').textContent = lecturerName;
                    document.getElementById('rejectDepartment').textContent = department;
                    document.getElementById('rejectClaimId').value = claimId;

                    const rejectModal = new bootstrap.Modal(document.getElementById('rejectModal'));
                    rejectModal.show();
                });
            });

            // Mark for review
            document.querySelectorAll('.review-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const claimId = this.dataset.claimId;
                    const lecturerName = this.dataset.lecturerName;
                    const department = this.dataset.department;

                    document.getElementById('reviewLecturerName').textContent = lecturerName;
                    document.getElementById('reviewDepartment').textContent = department;
                    document.getElementById('reviewClaimId').value = claimId;

                    const reviewModal = new bootstrap.Modal(document.getElementById('reviewModal'));
                    reviewModal.show();
                });
            });

            // Form submissions
            document.getElementById('approveForm').addEventListener('submit', function(e) {
                e.preventDefault();
                this.action = '@Url.Action("ApproveClaim", "AcademicManager")';
                this.submit();
            });

            document.getElementById('rejectForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const notes = document.getElementById('rejectionNotes').value;
                if (!notes.trim()) {
                    document.getElementById('rejectionNotes').classList.add('is-invalid');
                    return;
                }
                this.action = '@Url.Action("RejectClaim", "AcademicManager")';
                this.submit();
            });

            document.getElementById('reviewForm').addEventListener('submit', function(e) {
                e.preventDefault();
                this.action = '@Url.Action("SendForReview", "AcademicManager")';
                this.submit();
            });

            // Clear validation on input
            document.getElementById('rejectionNotes').addEventListener('input', function() {
                this.classList.remove('is-invalid');
            });

            // Add loading states to buttons
            const forms = document.querySelectorAll('#approveForm, #rejectForm, #reviewForm');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const submitButton = this.querySelector('button[type="submit"]');
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Processing...';
                });
            });
        });

        // Load additional statistics
        document.addEventListener('DOMContentLoaded', function() {
            fetch('@Url.Action("GetAcademicManagerStatistics", "AcademicManager")')
                .then(response => response.json())
                .then(data => {
                    console.log('Academic Manager statistics:', data);
                    // You can use this data to update other charts
                })
                .catch(error => console.error('Error loading statistics:', error));
        });
    </script>
