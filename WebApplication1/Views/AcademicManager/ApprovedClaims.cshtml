@model IEnumerable<ClaimModel>
@{
    ViewData["Title"] = "Approved Claims - Academic Manager";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-check-circle text-success me-2"></i>Approved Claims
                </h2>
                <div>
                    <span class="badge bg-success fs-6">@Model.Count() Approved</span>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Filter Claims</h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="department" class="form-label">Department</label>
                            <select class="form-select" id="department" name="department">
                                <option value="">All Departments</option>
                                @foreach (var dept in ViewBag.Departments)
                                {
                                    <option value="@dept">@dept</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="month" class="form-label">Month</label>
                            <input type="month" class="form-control" id="month" name="month" value="@Context.Request.Query["month"]">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-filter me-1"></i>Apply Filters
                                </button>
                                <a href="@Url.Action("ApprovedClaims")" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo me-1"></i>Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-check-double me-1"></i>
                            Approved Claims Summary
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Lecturer</th>
                                        <th>Department</th>
                                        <th>Month</th>
                                        <th>Hours</th>
                                        <th>Rate</th>
                                        <th>Total Amount</th>
                                        <th>Approved Date</th>
                                        <th>Processing Time</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        <span class="text-white fw-bold">@claim.Lecturer?.FirstName?[0]@claim.Lecturer?.LastName?[0]</span>
                                                    </div>
                                                    <div>
                                                        <strong>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</strong>
                                                        <br>
                                                        <small class="text-muted">@claim.Lecturer?.EmployeeId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@claim.Lecturer?.Department</span>
                                            </td>
                                            <td>
                                                <strong>@claim.Month.ToString("MMM yyyy")</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@claim.HoursWorked hours</span>
                                            </td>
                                            <td>
                                                <strong>R @claim.HourlyRate.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                <strong class="text-success">R @claim.TotalAmount.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                @if (claim.ApprovalDate.HasValue)
                                                {
                                                    <small class="text-muted">@claim.ApprovalDate.Value.ToString("MMM dd, yyyy")</small>
                                                    <br>
                                                    <small class="text-muted">@claim.ApprovalDate.Value.ToString("hh:mm tt")</small>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Not Set</span>
                                                }
                                            </td>
                                            <td>
                                                @if (claim.ProcessingDays.HasValue)
                                                {
                                                    <span class="badge @(claim.ProcessingDays <= 7 ? "bg-success" : claim.ProcessingDays <= 14 ? "bg-warning" : "bg-danger")">
                                                        @claim.ProcessingDays.Value.ToString("F1") days
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ClaimDetails", new { id = claim.Id })"
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("ReviewClaim", new { id = claim.Id })"
                                                       class="btn btn-sm btn-outline-info"
                                                       title="Review Again">
                                                        <i class="fas fa-redo"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Summary Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h6>Total Approved</h6>
                                <h3>@Model.Count()</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h6>Total Amount</h6>
                                <h3>R @Model.Sum(c => c.TotalAmount).ToString("N2")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h6>Avg. Processing</h6>
                                <h3>@Model.Where(c => c.ProcessingDays.HasValue).Average(c => c.ProcessingDays!.Value).ToString("F1") days</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h6>Departments</h6>
                                <h3>@Model.Select(c => c.Lecturer?.Department).Distinct().Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Department Breakdown -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-chart-pie me-1"></i>Department Breakdown
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Department</th>
                                                <th>Claims</th>
                                                <th>Total Amount</th>
                                                <th>Average Amount</th>
                                                <th>Percentage</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var departmentGroups = Model.GroupBy(c => c.Lecturer?.Department ?? "Unknown")
                                                .Select(g => new
                                                {
                                                    Department = g.Key,
                                                    Count = g.Count(),
                                                    TotalAmount = g.Sum(c => c.TotalAmount),
                                                    AverageAmount = g.Average(c => c.TotalAmount)
                                                })
                                                .OrderByDescending(g => g.TotalAmount)
                                                .ToList();

                                                var grandTotal = Model.Sum(c => c.TotalAmount);
                                            }

                                            @foreach (var dept in departmentGroups)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@dept.Department</strong>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary">@dept.Count</span>
                                                    </td>
                                                    <td>
                                                        <strong class="text-success">R @dept.TotalAmount.ToString("N2")</strong>
                                                    </td>
                                                    <td>
                                                        R @dept.AverageAmount.ToString("N2")
                                                    </td>
                                                    <td>
                                                        <div class="progress" style="height: 20px;">
                                                            <div class="progress-bar bg-success"
                                                                 style="width: @((dept.TotalAmount / grandTotal * 100).ToString("F1"))%"
                                                                 role="progressbar">
                                                                @((dept.TotalAmount / grandTotal * 100).ToString("F1"))%
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <td><strong>Total</strong></td>
                                                <td><strong>@Model.Count()</strong></td>
                                                <td><strong class="text-success">R @grandTotal.ToString("N2")</strong></td>
                                                <td><strong>R @Model.Average(c => c.TotalAmount).ToString("N2")</strong></td>
                                                <td><strong>100%</strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Approved Claims Found</h4>
                        <p class="text-muted">
                            No approved claims match your current filters.
                        </p>
                        <div class="mt-3">
                            <a href="@Url.Action("ApprovedClaims")" class="btn btn-primary me-2">
                                <i class="fas fa-redo me-1"></i>Clear Filters
                            </a>
                            <a href="@Url.Action("PendingClaims")" class="btn btn-outline-primary">
                                <i class="fas fa-clock me-1"></i>View Pending Claims
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
            font-size: 14px;
        }

        .progress {
            background-color: #e9ecef;
            border-radius: 0.375rem;
        }

        .table tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.025);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set current filter values
            const urlParams = new URLSearchParams(window.location.search);
            const department = urlParams.get('department');
            const month = urlParams.get('month');

            if (department) {
                $('#department').val(department);
            }

            if (month) {
                $('#month').val(month);
            }

            // Auto-submit form when filters change
            $('#department, #month').change(function() {
                $(this).closest('form').submit();
            });

            // Show loading state on form submission
            $('form').submit(function() {
                $('button[type="submit"]').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Filtering...');
            });

            // Add export functionality
            $('.export-btn').click(function() {
                const format = $(this).data('format');
                exportData(format);
            });

            function exportData(format) {
                // Get current filters
                const department = $('#department').val();
                const month = $('#month').val();

                let url = `@Url.Action("ExportApprovedClaims")?format=${format}`;

                if (department) {
                    url += `&department=${encodeURIComponent(department)}`;
                }

                if (month) {
                    url += `&month=${encodeURIComponent(month)}`;
                }

                window.location.href = url;
            }
        });
    </script>
}