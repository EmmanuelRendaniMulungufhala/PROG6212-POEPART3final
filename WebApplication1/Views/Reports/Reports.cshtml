@using WebApplication1.ViewModels
@model HRReportsViewModel
@{
    ViewData["Title"] = "HR Reports & Analytics";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-chart-bar me-2"></i>HR Reports & Analytics
            </h2>
            <p class="text-muted">Generate comprehensive reports and analyze claims data</p>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Approved Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalClaims</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAmount.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Period
                            </div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">
                                @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Average per Claim
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @((Model.TotalClaims > 0 ? Model.TotalAmount / Model.TotalClaims : 0).ToString("C"))
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calculator fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Parameters Card -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter me-2"></i>Report Parameters
            </h5>
        </div>
        <div class="card-body">
            <form method="post" id="reportForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">Start Date *</label>
                            <input asp-for="StartDate" type="date" class="form-control" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">End Date *</label>
                            <input asp-for="EndDate" type="date" class="form-control" required />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="ReportType" class="form-label">Report Type</label>
                            <select asp-for="ReportType" class="form-control">
                                <option value="Payment">Payment Report</option>
                                <option value="Claims">Claims Analysis</option>
                                <option value="Lecturer">Lecturer Performance</option>
                                <option value="Monthly">Monthly Summary</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Actions</label>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-chart-bar me-1"></i>Generate Report
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.ApprovedClaims.Any())
    {
        <!-- Report Results -->
        <div class="card mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list-alt me-2"></i>Report Results
                    <span class="badge bg-primary ms-2">@Model.TotalClaims claims found</span>
                </h5>
                <div>
                    <span class="badge bg-success me-2">Total: @Model.TotalAmount.ToString("C")</span>
                    <button class="btn btn-sm btn-outline-secondary" onclick="exportToExcel()">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="reportTable">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Lecturer</th>
                                <th>Employee ID</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Approved</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ApprovedClaims.Count; i++)
                            {
                                var claim = Model.ApprovedClaims[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <strong>@claim.Lecturer?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@claim.Lecturer?.Email</small>
                                    </td>
                                    <td>@claim.Lecturer?.EmployeeId</td>
                                    <td>@claim.FormattedMonth</td>
                                    <td>@claim.HoursWorked.ToString("F1")</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>
                                        <strong class="text-success">@claim.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td>@claim.ApprovalDate?.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary">
                            <tr>
                                <td colspan="6" class="text-end"><strong>Grand Total:</strong></td>
                                <td colspan="4"><strong>@Model.TotalAmount.ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Summary Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <h6 class="card-title">Total Claims</h6>
                                <h2>@Model.TotalClaims</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <h6 class="card-title">Total Amount</h6>
                                <h2>@Model.TotalAmount.ToString("C")</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <h6 class="card-title">Average per Claim</h6>
                                <h2>@((Model.TotalClaims > 0 ? Model.TotalAmount / Model.TotalClaims : 0).ToString("C"))</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <h6 class="card-title">Period</h6>
                                <h6>@Model.StartDate.ToString("MMM dd, yyyy")</h6>
                                <h6>to</h6>
                                <h6>@Model.EndDate.ToString("MMM dd, yyyy")</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="GeneratePaymentReport"
                                   asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
                                   class="btn btn-success me-2" target="_blank">
                                    <i class="fas fa-file-pdf me-1"></i>Generate Payment Report (PDF)
                                </a>

                                <button class="btn btn-outline-primary me-2" onclick="printReport()">
                                    <i class="fas fa-print me-1"></i>Print Report
                                </button>
                            </div>

                            <div>
                                <button class="btn btn-outline-secondary" onclick="exportToExcel()">
                                    <i class="fas fa-file-excel me-1"></i>Export to Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-pie me-2"></i>Amount Distribution by Lecturer
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="lecturerDistributionChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-line me-2"></i>Monthly Trend
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyTrendChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No Data Message -->
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-chart-bar fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Report Data Available</h4>
                <p class="text-muted">
                    @if (Model.StartDate != default && Model.EndDate != default)
                    {
                        <text>
                            No approved claims found for the selected period:<br />
                            <strong>@Model.StartDate.ToString("MMM dd, yyyy") to @Model.EndDate.ToString("MMM dd, yyyy")</strong>
                        </text>
                    }
                    else
                    {
                        <text>Select a date range and generate a report to see data.</text>
                    }
                </p>
                <div class="mt-3">
                    <button class="btn btn-primary" onclick="document.getElementById('reportForm').scrollIntoView()">
                        <i class="fas fa-filter me-1"></i>Adjust Filters
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>

    <partial name="_ValidationScriptsPartial" />

    <script>
        // Set default dates to current month
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);

            document.getElementById('StartDate').value = formatDate(firstDay);
            document.getElementById('EndDate').value = formatDate(lastDay);

            @if (Model.ApprovedClaims.Any())
            {
                    <text>
                    initializeCharts();
                    </text>
            }
        });

        function formatDate(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        function initializeCharts() {
            // Lecturer Distribution Chart
            const lecturerCtx = document.getElementById('lecturerDistributionChart').getContext('2d');
            const lecturerData = @Html.Raw(Json.Serialize(Model.ApprovedClaims
                            .GroupBy(c => c.Lecturer?.FullName)
                            .Select(g => new { Lecturer = g.Key, Amount = g.Sum(c => c.TotalAmount) })
                            .OrderByDescending(x => x.Amount)
                            .Take(10)));

        new Chart(lecturerCtx, {
            type: 'pie',
            data: {
                labels: lecturerData.map(x => x.lecturer),
                datasets: [{
                    data: lecturerData.map(x => x.amount),
                    backgroundColor: [
                        '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                        '#9966FF', '#FF9F40', '#FF6384', '#C9CBCF',
                        '#4BC0C0', '#36A2EB'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right'
                    },
                    title: {
                        display: true,
                        text: 'Top 10 Lecturers by Amount'
                    }
                }
            }
        });

            // Monthly Trend Chart
            const monthlyCtx = document.getElementById('monthlyTrendChart').getContext('2d');
            const monthlyData = @Html.Raw(Json.Serialize(Model.ApprovedClaims
                        .GroupBy(c => c.FormattedMonth)
                        .Select(g => new { Month = g.Key, Amount = g.Sum(c => c.TotalAmount), Count = g.Count() })
                        .OrderBy(x => x.Month)));

        new Chart(monthlyCtx, {
            type: 'line',
            data: {
                labels: monthlyData.map(x => x.month),
                datasets: [{
                    label: 'Amount (R)',
                    data: monthlyData.map(x => x.amount),
                    borderColor: '#36A2EB',
                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Monthly Claims Trend'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

        function exportToExcel() {
            const table = document.getElementById('reportTable');
            const wb = XLSX.utils.table_to_book(table, {sheet: "Claims Report"});
            XLSX.writeFile(wb, `Claims_Report_${new Date().toISOString().split('T')[0]}.xlsx`);
        }

        function printReport() {
            window.print();
        }

        // Date validation
        document.getElementById('reportForm').addEventListener('submit', function(e) {
            const startDate = new Date(document.getElementById('StartDate').value);
            const endDate = new Date(document.getElementById('EndDate').value);

            if (startDate > endDate) {
                e.preventDefault();
                alert('Start date cannot be after end date.');
                return false;
            }

            const diffTime = Math.abs(endDate - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

            if (diffDays > 365) {
                if (!confirm('The selected date range is over 1 year. This might take a while to process. Continue?')) {
                    e.preventDefault();
                    return false;
                }
            }
        });
    </script>

    <style>
        @@media print {
            .btn, .card-header .badge, .navbar, .footer {
                display: none !important;
            }

            .card {
                border: none !important;
                box-shadow: none !important;
            }

            .card-header {
                background: white !important;
                color: black !important;
                border-bottom: 2px solid #333 !important;
            }

            table {
                font-size: 12px;
            }
        }
    </style>
}