@model ClaimModel
@{
    ViewData["Title"] = "Claim Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-eye me-2"></i>Claim Details
            </h2>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Claim for @Model.FormattedMonth</h5>
            <span class="badge @Model.StatusBadgeClass">@Model.Status</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th width="40%">Month:</th>
                            <td>@Model.FormattedMonth</td>
                        </tr>
                        <tr>
                            <th>Hours Worked:</th>
                            <td>@Model.HoursWorked</td>
                        </tr>
                        <tr>
                            <th>Hourly Rate:</th>
                            <td>@Model.HourlyRate.ToString("C")</td>
                        </tr>
                        <tr>
                            <th>Total Amount:</th>
                            <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th width="40%">Status:</th>
                            <td><span class="badge @Model.StatusBadgeClass">@Model.Status</span></td>
                        </tr>
                        <tr>
                            <th>Submitted:</th>
                            <td>@Model.SubmissionDate.ToString("MMM dd, yyyy HH:mm")</td>
                        </tr>
                        @if (Model.ApprovalDate.HasValue)
                        {
                            <tr>
                                <th>Processed:</th>
                                <td>@Model.ApprovalDate.Value.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <th>Processed By:</th>
                                <td>@Model.ApprovedBy</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Additional Notes:</h6>
                        <div class="border p-3 bg-light rounded">
                            @Model.AdditionalNotes
                        </div>
                    </div>
                </div>
            }

            @if (Model.SupportingDocuments.Any())
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <h6>Supporting Documents:</h6>
                        <div class="list-group">
                            @foreach (var doc in Model.SupportingDocuments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="@doc.FileIcon me-2"></i>
                                        @doc.OriginalFileName
                                        <small class="text-muted ms-2">(@doc.FileSizeFormatted)</small>
                                    </div>
                                    <a asp-action="DownloadDocument" asp-route-documentId="@doc.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="row mt-4">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>