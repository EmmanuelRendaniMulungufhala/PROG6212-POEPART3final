@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>Dashboard
            </h1>
            <p class="lead">Welcome to the Contract Monthly Claim System</p>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Lecturer"))
        {
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@Model.PendingClaims</h4>
                                    <p class="card-text">Pending Claims</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-clock fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@Model.ApprovedClaims</h4>
                                    <p class="card-text">Approved Claims</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <a asp-controller="Claims" asp-action="Create" class="btn btn-primary me-2">
                                <i class="fas fa-plus-circle me-1"></i>Submit New Claim
                            </a>
                            <a asp-controller="Claims" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-1"></i>View All Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
        {
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card bg-warning text-dark">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">@Model.PendingApprovals</h4>
                                    <p class="card-text">Claims Awaiting Approval</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-8 mb-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">Approval Actions</h5>
                        </div>
                        <div class="card-body">
                            <a asp-controller="Approvals" asp-action="Index" class="btn btn-warning me-2">
                                <i class="fas fa-tasks me-1"></i>Review Pending Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Recent Activity Section -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-history me-2"></i>Recent Activity
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentActivities.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Activity</th>
                                            <th>Status</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var activity in Model.RecentActivities)
                                        {
                                            <tr>
                                                <td>@activity.Date.ToString("MMM dd, yyyy")</td>
                                                <td>@activity.Description</td>
                                                <td>
                                                    <span class="badge @activity.StatusBadgeClass">@activity.Status</span>
                                                </td>
                                                <td>@activity.Amount.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No recent activity found.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-5">
            <div class="col-md-6 offset-md-3 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="fas fa-file-invoice-dollar fa-5x text-primary mb-4"></i>
                        <h3>Welcome to CMCS</h3>
                        <p class="text-muted mb-4">Please log in to access the Contract Monthly Claim System</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login to System
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>