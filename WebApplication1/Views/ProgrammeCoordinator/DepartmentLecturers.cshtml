@using Microsoft.EntityFrameworkCore
@using WebApplication1.Data
@model List<ApplicationUser>
@{
    ViewData["Title"] = "Department Lecturers";
    var department = ViewBag.Department as string ?? "Department";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-users me-2"></i>@department Lecturers
                </h2>
                <span class="badge bg-primary">@Model.Count Active Lecturers</span>
            </div>
            <p class="text-muted">Manage and view lecturers in your department</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Lecturers List</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Employee ID</th>
                                <th>Date Joined</th>
                                <th>Status</th>
                                <th>Total Claims</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                var totalClaims = await Context.RequestServices.GetService<ApplicationDbContext>()
                                .Claims.CountAsync(c => c.LecturerId == lecturer.Id);

                                <tr>
                                    <td>
                                        <strong>@lecturer.FullName</strong>
                                    </td>
                                    <td>@lecturer.Email</td>
                                    <td>@lecturer.EmployeeId</td>
                                    <td>@lecturer.DateJoined.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (lecturer.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@totalClaims</span>
                                    </td>
                                    <td>
                                        <a asp-action="LecturerClaims" asp-route-id="@lecturer.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>View Claims
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No lecturers found in @department</h5>
                    <p class="text-muted">There are currently no active lecturers in your department.</p>
                </div>
            }
        </div>
    </div>
</div>