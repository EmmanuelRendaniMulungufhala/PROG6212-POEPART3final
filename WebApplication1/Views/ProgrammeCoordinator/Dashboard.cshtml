@using Microsoft.EntityFrameworkCore
@using WebApplication1.Data
@using WebApplication1.ViewModels
@model CoordinatorDashboardViewModel
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-tachometer-alt me-2"></i>Programme Coordinator Dashboard
            </h2>
            <p class="text-muted">Overview of claims and activities for @Model.Department</p>
        </div>
    </div>

    <!-- Department Info -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="card-title">@Model.Department</h4>
                            <p class="card-text">Programme Coordinator Dashboard</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <i class="fas fa-university fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalClaims</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingClaims</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Approved This Month
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApprovedClaimsThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Monthly Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAmountThisMonth.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-action="ReviewClaims" class="btn btn-primary w-100">
                                <i class="fas fa-tasks me-2"></i>Review All Claims
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="DepartmentLecturers" class="btn btn-success w-100">
                                <i class="fas fa-users me-2"></i>Department Lecturers
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="DepartmentReports" class="btn btn-info w-100">
                                <i class="fas fa-chart-bar me-2"></i>Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="ReviewClaims" asp-route-status="Pending" class="btn btn-warning w-100">
                                <i class="fas fa-clock me-2"></i>Pending Claims (@Model.PendingClaims)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Requiring Immediate Attention -->
    @if (Model.PendingClaims > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Claims Requiring Immediate Attention
                        </h5>
                        <span class="badge bg-danger">@Model.PendingClaims Urgent</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-warning">
                                    <tr>
                                        <th>Lecturer</th>
                                        <th>Month</th>
                                        <th>Hours</th>
                                        <th>Amount</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentClaims.Where(c => c.Status == ClaimStatus.Pending).Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle text-white d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        @claim.Lecturer?.FirstName?[0]@claim.Lecturer?.LastName?[0]
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold">@claim.Lecturer?.FullName</div>
                                                        <small class="text-muted">@claim.Lecturer?.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@claim.FormattedMonth</td>
                                            <td>@claim.HoursWorked</td>
                                            <td class="fw-bold">@claim.TotalAmount.ToString("C")</td>
                                            <td>
                                                <small>@claim.SubmissionDate.ToString("MMM dd, yyyy")</small>
                                                <br>
                                                <small class="text-muted">@claim.SubmissionDate.ToString("hh:mm tt")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-success approve-btn"
                                                            data-claim-id="@claim.Id" data-lecturer-name="@claim.Lecturer?.FullName"
                                                            title="Approve Claim">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger reject-btn"
                                                            data-claim-id="@claim.Id" data-lecturer-name="@claim.Lecturer?.FullName"
                                                            title="Reject Claim">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-warning review-btn"
                                                            data-claim-id="@claim.Id" data-lecturer-name="@claim.Lecturer?.FullName"
                                                            title="Mark for Review">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.PendingClaims > 5)
                        {
                            <div class="text-center mt-3">
                                <a asp-action="ReviewClaims" asp-route-status="Pending" class="btn btn-warning">
                                    View All @Model.PendingClaims Pending Claims
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Claims and Charts -->
    <div class="row">
        <!-- Recent Claims -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Department Claims</h5>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Filter by Status
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="ReviewClaims">All Claims</a></li>
                            <li><a class="dropdown-item" asp-action="ReviewClaims" asp-route-status="Pending">Pending</a></li>
                            <li><a class="dropdown-item" asp-action="ReviewClaims" asp-route-status="Approved">Approved</a></li>
                            <li><a class="dropdown-item" asp-action="ReviewClaims" asp-route-status="Rejected">Rejected</a></li>
                            <li><a class="dropdown-item" asp-action="ReviewClaims" asp-route-status="UnderReview">Under Review</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.RecentClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Lecturer</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentClaims)
                                    {
                                        <tr>
                                            <td>@claim.Lecturer?.FullName</td>
                                            <td>@claim.FormattedMonth</td>
                                            <td>@claim.TotalAmount.ToString("C")</td>
                                            <td>
                                                <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                            </td>
                                            <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (claim.Status == ClaimStatus.Pending || claim.Status == ClaimStatus.UnderReview)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success approve-btn"
                                                                data-claim-id="@claim.Id" data-lecturer-name="@claim.Lecturer?.FullName"
                                                                title="Approve Claim">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-outline-danger reject-btn"
                                                                data-claim-id="@claim.Id" data-lecturer-name="@claim.Lecturer?.FullName"
                                                                title="Reject Claim">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">All Caught Up!</h5>
                            <p class="text-muted">No claims requiring attention.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Claims Status Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="claimsStatusChart" width="100%" height="200"></canvas>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Department Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Active Lecturers:</small>
                        <div class="h5">
                            @(await Context.RequestServices.GetService<ApplicationDbContext>()
                                                        .Users.CountAsync(u => u.Role == UserRole.Lecturer &&
                                                        u.Department == Model.Department &&
                                                        u.IsActive))
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Total Approved Amount (Month):</small>
                        <div class="h5 text-success">@Model.TotalAmountThisMonth.ToString("C")</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Pending Claims:</small>
                        <div class="h5 text-warning">@Model.PendingClaims</div>
                    </div>
                    <div>
                        <small class="text-muted">Department:</small>
                        <div class="h6">@Model.Department</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Claim Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Approve Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approveForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve the claim for <strong id="approveLecturerName"></strong>?</p>
                    <div class="mb-3">
                        <label for="approvalNotes" class="form-label">Approval Notes (Optional):</label>
                        <textarea class="form-control" id="approvalNotes" name="approvalNotes" rows="3"
                                  placeholder="Add any notes or comments..."></textarea>
                    </div>
                    <input type="hidden" id="approveClaimId" name="claimId">
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Claim Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject the claim for <strong id="rejectLecturerName"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectionNotes" class="form-label">Rejection Notes (Required):</label>
                        <textarea class="form-control" id="rejectionNotes" name="rejectionNotes" rows="3"
                                  placeholder="Please provide reason for rejection..." required></textarea>
                        <div class="invalid-feedback">Please provide rejection notes.</div>
                    </div>
                    <input type="hidden" id="rejectClaimId" name="claimId">
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Mark for Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Mark Claim for Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="reviewForm" method="post">
                <div class="modal-body">
                    <p>Mark claim for <strong id="reviewLecturerName"></strong> as Under Review?</p>
                    <div class="mb-3">
                        <label for="reviewNotes" class="form-label">Review Notes (Optional):</label>
                        <textarea class="form-control" id="reviewNotes" name="reviewNotes" rows="3"
                                  placeholder="Add any notes or questions..."></textarea>
                    </div>
                    <input type="hidden" id="reviewClaimId" name="claimId">
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Mark for Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Claims Status Chart
        var ctx = document.getElementById('claimsStatusChart').getContext('2d');
        var claimsStatusChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Pending', 'Approved', 'Rejected', 'Under Review'],
                datasets: [{
                    data: [
                        @Model.PendingClaims,
                        @Model.ApprovedClaims,
                        @Model.RejectedClaims,
                        @Model.UnderReviewClaims
                    ],
                    backgroundColor: [
                        '#ffc107',
                        '#198754',
                        '#dc3545',
                        '#0dcaf0'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Modal handlers
        document.addEventListener('DOMContentLoaded', function() {
            // Approve claim
            document.querySelectorAll('.approve-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const claimId = this.dataset.claimId;
                    const lecturerName = this.dataset.lecturerName;

                    document.getElementById('approveLecturerName').textContent = lecturerName;
                    document.getElementById('approveClaimId').value = claimId;

                    const approveModal = new bootstrap.Modal(document.getElementById('approveModal'));
                    approveModal.show();
                });
            });

            // Reject claim
            document.querySelectorAll('.reject-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const claimId = this.dataset.claimId;
                    const lecturerName = this.dataset.lecturerName;

                    document.getElementById('rejectLecturerName').textContent = lecturerName;
                    document.getElementById('rejectClaimId').value = claimId;

                    const rejectModal = new bootstrap.Modal(document.getElementById('rejectModal'));
                    rejectModal.show();
                });
            });

            // Mark for review
            document.querySelectorAll('.review-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const claimId = this.dataset.claimId;
                    const lecturerName = this.dataset.lecturerName;

                    document.getElementById('reviewLecturerName').textContent = lecturerName;
                    document.getElementById('reviewClaimId').value = claimId;

                    const reviewModal = new bootstrap.Modal(document.getElementById('reviewModal'));
                    reviewModal.show();
                });
            });

            // Form submissions
            document.getElementById('approveForm').addEventListener('submit', function(e) {
                e.preventDefault();
                this.action = '@Url.Action("ApproveClaim", "ProgrammeCoordinator")';
                this.submit();
            });

            document.getElementById('rejectForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const notes = document.getElementById('rejectionNotes').value;
                if (!notes.trim()) {
                    document.getElementById('rejectionNotes').classList.add('is-invalid');
                    return;
                }
                this.action = '@Url.Action("RejectClaim", "ProgrammeCoordinator")';
                this.submit();
            });

            document.getElementById('reviewForm').addEventListener('submit', function(e) {
                e.preventDefault();
                this.action = '@Url.Action("SendForReview", "ProgrammeCoordinator")';
                this.submit();
            });

            // Clear validation on input
            document.getElementById('rejectionNotes').addEventListener('input', function() {
                this.classList.remove('is-invalid');
            });
        });
    </script>
}