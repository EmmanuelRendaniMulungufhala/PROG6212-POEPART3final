@using WebApplication1.ViewModels
@model ApprovalViewModel
@{
    ViewData["Title"] = "Review Claim";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-search me-2"></i>Review Claim
            </h2>
        </div>
    </div>

    @if (Model.Claim != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Claim Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-bordered">
                            <tr>
                                <th width="40%">Lecturer:</th>
                                <td>@Model.Claim.Lecturer?.FullName</td>
                            </tr>
                            <tr>
                                <th>Month:</th>
                                <td>@Model.Claim.FormattedMonth</td>
                            </tr>
                            <tr>
                                <th>Hours Worked:</th>
                                <td>@Model.Claim.HoursWorked</td>
                            </tr>
                            <tr>
                                <th>Hourly Rate:</th>
                                <td>@Model.Claim.HourlyRate.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Total Amount:</th>
                                <td><strong>@Model.Claim.TotalAmount.ToString("C")</strong></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-bordered">
                            <tr>
                                <th width="40%">Status:</th>
                                <td><span class="badge @Model.Claim.StatusBadgeClass">@Model.Claim.Status</span></td>
                            </tr>
                            <tr>
                                <th>Submitted:</th>
                                <td>@Model.Claim.SubmissionDate.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Claim.AdditionalNotes))
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6>Lecturer Notes:</h6>
                            <div class="border p-3 bg-light rounded">
                                @Model.Claim.AdditionalNotes
                            </div>
                        </div>
                    </div>
                }

                @if (Model.Claim.SupportingDocuments.Any())
                {
                    <div class="row mt-4">
                        <div class="col-12">
                            <h6>Supporting Documents:</h6>
                            <div class="list-group">
                                @foreach (var doc in Model.Claim.SupportingDocuments)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="@doc.FileIcon me-2"></i>
                                            @doc.OriginalFileName
                                            <small class="text-muted ms-2">(@doc.FileSizeFormatted)</small>
                                        </div>
                                        <a asp-controller="Claims" asp-action="DownloadDocument" asp-route-documentId="@doc.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-download"></i> Download
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Approval Action</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="approvalNotes" class="form-label">Approval Notes</label>
                        <textarea name="approvalNotes" class="form-control" rows="3"
                              placeholder="Enter approval or rejection notes..."></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" asp-action="Approve" asp-route-id="@Model.ClaimId"
                                class="btn btn-success">
                            <i class="fas fa-check me-1"></i>Approve Claim
                        </button>
                        <button type="submit" asp-action="Reject" asp-route-id="@Model.ClaimId"
                                class="btn btn-danger">
                            <i class="fas fa-times me-1"></i>Reject Claim
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Claim not found.
        </div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    }
</div>