@model List<ClaimModel>
@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-tasks me-2"></i>Pending Claims Approval
            </h2>
            <p class="text-muted">Review and process pending claims</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Claims Awaiting Approval (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Lecturer</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.Lecturer?.FullName</td>
                                    <td>@claim.FormattedMonth</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>@claim.TotalAmount.ToString("C")</td>
                                    <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="Review" asp-route-id="@claim.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye me-1"></i>Review
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h5 class="text-muted">No pending claims</h5>
                    <p class="text-muted">All claims have been processed</p>
                </div>
            }
        </div>
    </div>
</div>