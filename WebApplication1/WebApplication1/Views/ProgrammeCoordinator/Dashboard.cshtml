@using Microsoft.EntityFrameworkCore
@using WebApplication1.Data
@using WebApplication1.ViewModels
@model CoordinatorDashboardViewModel
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-tachometer-alt me-2"></i>Programme Coordinator Dashboard
            </h2>
            <p class="text-muted">Overview of claims and activities for @Model.Department</p>
        </div>
    </div>

    <!-- Department Info -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="card-title">@Model.Department</h4>
                            <p class="card-text">Programme Coordinator Dashboard</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <i class="fas fa-university fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalClaims</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingClaims</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Approved This Month
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApprovedClaimsThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Monthly Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAmountThisMonth.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-action="ReviewClaims" class="btn btn-primary w-100">
                                <i class="fas fa-tasks me-2"></i>Review Claims
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="DepartmentLecturers" class="btn btn-success w-100">
                                <i class="fas fa-users me-2"></i>Department Lecturers
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="DepartmentReports" class="btn btn-info w-100">
                                <i class="fas fa-chart-bar me-2"></i>Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="ReviewClaims" asp-route-status="Pending" class="btn btn-warning w-100">
                                <i class="fas fa-clock me-2"></i>Pending Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims and Charts -->
    <div class="row">
        <!-- Recent Claims -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Claims Needing Attention</h5>
                    <span class="badge bg-warning">@Model.PendingClaims Pending</span>
                </div>
                <div class="card-body">
                    @if (Model.RecentClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Lecturer</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentClaims)
                                    {
                                        <tr>
                                            <td>@claim.Lecturer?.FullName</td>
                                            <td>@claim.FormattedMonth</td>
                                            <td>@claim.TotalAmount.ToString("C")</td>
                                            <td>
                                                <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                            </td>
                                            <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="ReviewClaims" class="btn btn-sm btn-outline-success">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">All Caught Up!</h5>
                            <p class="text-muted">No pending claims requiring attention.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Claims Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="claimsStatusChart" width="100%" height="200"></canvas>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Department Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Active Lecturers:</small>
                        <div class="h5">
                            @(await Context.RequestServices.GetService<ApplicationDbContext>()
                                                        .Users.CountAsync(u => u.Role == UserRole.Lecturer &&
                                                        u.Department == Model.Department &&
                                                        u.IsActive))
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Total Approved Amount (Month):</small>
                        <div class="h5 text-success">@Model.TotalAmountThisMonth.ToString("C")</div>
                    </div>
                    <div>
                        <small class="text-muted">Department:</small>
                        <div class="h6">@Model.Department</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Claims Status Chart
        var ctx = document.getElementById('claimsStatusChart').getContext('2d');
        var claimsStatusChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Pending', 'Approved', 'Rejected', 'Under Review'],
                datasets: [{
                    data: [
                        @Model.PendingClaims,
                        @Model.ApprovedClaims,
                        @Model.RejectedClaims,
                        @Model.UnderReviewClaims
                    ],
                    backgroundColor: [
                        '#ffc107',
                        '#198754',
                        '#dc3545',
                        '#0dcaf0'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Load additional statistics
        document.addEventListener('DOMContentLoaded', function() {
            fetch('@Url.Action("GetDepartmentStatistics", "ProgrammeCoordinator")')
                .then(response => response.json())
                .then(data => {
                    console.log('Department statistics:', data);
                    // You can use this data to update other charts
                })
                .catch(error => console.error('Error loading statistics:', error));
        });
    </script>
}