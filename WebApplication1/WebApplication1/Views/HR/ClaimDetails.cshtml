@model ClaimModel
@{
    ViewData["Title"] = "Claim Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-file-invoice me-2"></i>Claim Details
                </h2>
                <a asp-action="ProcessClaims" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Claims
                </a>
            </div>
            <p class="text-muted">Detailed view of claim information and history</p>
        </div>
    </div>

    <!-- Claim Information -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Claim Information</h5>
                    <span class="badge @Model.StatusBadgeClass">@Model.Status</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Lecturer:</th>
                                    <td>@Model.Lecturer?.FullName</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>@Model.Lecturer?.Email</td>
                                </tr>
                                <tr>
                                    <th>Department:</th>
                                    <td>@Model.Lecturer?.Department</td>
                                </tr>
                                <tr>
                                    <th>Claim Month:</th>
                                    <td>@Model.FormattedMonth</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Hours Worked:</th>
                                    <td>@Model.HoursWorked</td>
                                </tr>
                                <tr>
                                    <th>Hourly Rate:</th>
                                    <td>@Model.HourlyRate.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th>Total Amount:</th>
                                    <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                                </tr>
                                <tr>
                                    <th>Submitted:</th>
                                    <td>@Model.SubmissionDate.ToString("MMM dd, yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                    {
                        <div class="mt-3">
                            <h6>Additional Notes:</h6>
                            <div class="border rounded p-3 bg-light">
                                @Model.AdditionalNotes
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ApprovalNotes))
                    {
                        <div class="mt-3">
                            <h6>Approval/Rejection Notes:</h6>
                            <div class="border rounded p-3 bg-light">
                                @Model.ApprovalNotes
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Supporting Documents -->
            @if (Model.SupportingDocuments.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">Supporting Documents (@Model.SupportingDocuments.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var doc in Model.SupportingDocuments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-file @(doc.ContentType.Contains("image") ? "text-success" : "text-primary") me-2"></i>
                                        @doc.OriginalFileName
                                        <br />
                                        <small class="text-muted">
                                            @doc.ContentType • @((doc.FileSize / 1024f / 1024f).ToString("F2")) MB •
                                            Uploaded on @doc.UploadDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <a href="@Url.Action("DownloadDocument", "Claims", new { id = doc.Id })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Status History -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Status History</h5>
                </div>
                <div class="card-body">
                    @if (Model.StatusHistory.Any())
                    {
                        <div class="timeline">
                            @foreach (var history in Model.StatusHistory.OrderBy(h => h.ChangedDate))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker bg-@(history.NewStatus == ClaimStatus.Approved ? "success" : history.NewStatus == ClaimStatus.Rejected ? "danger" : "warning")"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">@history.NewStatus</h6>
                                        <p class="text-muted mb-1">@history.ChangedDate.ToString("MMM dd, yyyy HH:mm")</p>
                                        <p class="mb-1">By: @history.ChangedBy</p>
                                        @if (!string.IsNullOrEmpty(history.ChangeNotes))
                                        {
                                            <p class="small text-muted">@history.ChangeNotes</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No status history available.</p>
                    }

                    <!-- Quick Actions -->
                    @if (Model.Status == ClaimStatus.Pending || Model.Status == ClaimStatus.UnderReview)
                    {
                        <div class="mt-4 p-3 border rounded bg-light">
                            <h6>Quick Actions</h6>
                            <div class="d-grid gap-2">
                                <a asp-action="ApproveClaim" asp-route-claimId="@Model.Id"
                                   class="btn btn-success btn-sm">
                                    <i class="fas fa-check me-1"></i>Approve Claim
                                </a>
                                <a asp-action="RejectClaim" asp-route-claimId="@Model.Id"
                                   class="btn btn-danger btn-sm">
                                    <i class="fas fa-times me-1"></i>Reject Claim
                                </a>
                                <a asp-action="ProcessClaims" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Process in List
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 20px;
    }

    .timeline-item {
        position: relative;
        padding-left: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -10px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .timeline-content {
        padding-bottom: 10px;
        border-left: 2px solid #dee2e6;
        padding-left: 15px;
    }

    .timeline-item:last-child .timeline-content {
        border-left: none;
    }
</style>