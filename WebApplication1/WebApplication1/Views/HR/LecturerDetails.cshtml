@using WebApplication1.ViewModels
@model LecturerDetailsViewModel
@{
    ViewData["Title"] = "Lecturer Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-user me-2"></i>Lecturer Details
                </h2>
                <a asp-action="LecturerManagement" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Lecturers
                </a>
            </div>
            <p class="text-muted">View and manage lecturer information and claims history</p>
        </div>
    </div>

    <!-- Lecturer Information Card -->
    <div class="card mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Lecturer Information</h5>
            <div>
                @if (Model.Lecturer.IsActive)
                {
                    <span class="badge bg-success me-2">Active</span>
                }
                else
                {
                    <span class="badge bg-danger me-2">Inactive</span>
                }
                <span class="badge bg-primary">@Model.Lecturer.Role</span>
                <button type="button" class="btn btn-sm btn-outline-primary ms-2" data-bs-toggle="modal" data-bs-target="#editLecturerModal">
                    <i class="fas fa-edit me-1"></i>Edit
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Full Name:</th>
                            <td>@Model.Lecturer.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Lecturer.Email</td>
                        </tr>
                        <tr>
                            <th>Phone:</th>
                            <td>@(string.IsNullOrEmpty(Model.Lecturer.PhoneNumber) ? "Not provided" : Model.Lecturer.PhoneNumber)</td>
                        </tr>
                        <tr>
                            <th>Employee ID:</th>
                            <td>@(string.IsNullOrEmpty(Model.Lecturer.EmployeeId) ? "Not assigned" : Model.Lecturer.EmployeeId)</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Department:</th>
                            <td>@(string.IsNullOrEmpty(Model.Lecturer.Department) ? "Not assigned" : Model.Lecturer.Department)</td>
                        </tr>
                        <tr>
                            <th>Date Joined:</th>
                            <td>@Model.Lecturer.DateJoined.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <th>Total Claims:</th>
                            <td>@Model.Claims.Count</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (Model.Lecturer.IsActive)
                                {
                                    <a asp-action="UpdateLecturerStatus" asp-route-id="@Model.Lecturer.Id" asp-route-isActive="false"
                                       class="btn btn-sm btn-warning" onclick="return confirm('Are you sure you want to deactivate this lecturer?')">
                                        <i class="fas fa-pause me-1"></i>Deactivate
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="UpdateLecturerStatus" asp-route-id="@Model.Lecturer.Id" asp-route-isActive="true"
                                       class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to activate this lecturer?')">
                                        <i class="fas fa-play me-1"></i>Activate
                                    </a>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims History -->
    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Claims History (@Model.Claims.Count)</h5>
            <div>
                <span class="badge bg-warning me-2">@Model.Claims.Count(c => c.Status == ClaimStatus.Pending) Pending</span>
                <span class="badge bg-info">@Model.Claims.Count(c => c.Status == ClaimStatus.UnderReview) Under Review</span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Approved/Rejected</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.Claims)
                            {
                                <tr>
                                    <td>@claim.FormattedMonth</td>
                                    <td>@claim.HoursWorked.ToString("F1")</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>
                                        <strong>@claim.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                    </td>
                                    <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (claim.ApprovalDate.HasValue)
                                        {
                                            @claim.ApprovalDate.Value.ToString("MMM dd, yyyy")
                                            <br />
                                            <small class="text-muted">by @claim.ApprovedBy</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="ClaimDetails" asp-route-id="@claim.Id"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (claim.Status == ClaimStatus.Pending || claim.Status == ClaimStatus.UnderReview)
                                            {
                                                <button type="button" class="btn btn-outline-success"
                                                        data-bs-toggle="modal" data-bs-target="#approveModal"
                                                        data-claim-id="@claim.Id" data-claim-month="@claim.FormattedMonth"
                                                        title="Approve Claim">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger"
                                                        data-bs-toggle="modal" data-bs-target="#rejectModal"
                                                        data-claim-id="@claim.Id" data-claim-month="@claim.FormattedMonth"
                                                        title="Reject Claim">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Claims Summary -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h6>Total Claims</h6>
                                <h3>@Model.Claims.Count</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h6>Approved</h6>
                                <h3>@Model.Claims.Count(c => c.Status == ClaimStatus.Approved)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h6>Pending</h6>
                                <h3>@Model.Claims.Count(c => c.Status == ClaimStatus.Pending)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body text-center">
                                <h6>Rejected</h6>
                                <h3>@Model.Claims.Count(c => c.Status == ClaimStatus.Rejected)</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Amount Summary -->
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="card bg-dark text-white">
                            <div class="card-body text-center">
                                <h5>Total Amount Processed</h5>
                                <h2>@Model.Claims.Where(c => c.Status == ClaimStatus.Approved).Sum(c => c.TotalAmount).ToString("C")</h2>
                                <small>Across @Model.Claims.Count(c => c.Status == ClaimStatus.Approved) approved claims</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No claims found for this lecturer</h5>
                    <p class="text-muted">This lecturer hasn't submitted any claims yet.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit Lecturer Modal -->
<div class="modal fade" id="editLecturerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Lecturer Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateLecturerDetails" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Lecturer.Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">First Name *</label>
                                <input type="text" class="form-control" name="firstName" value="@Model.Lecturer.FirstName" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Last Name *</label>
                                <input type="text" class="form-control" name="lastName" value="@Model.Lecturer.LastName" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" name="email" value="@Model.Lecturer.Email" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="phoneNumber" value="@Model.Lecturer.PhoneNumber" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Employee ID</label>
                                <input type="text" class="form-control" name="employeeId" value="@Model.Lecturer.EmployeeId" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Department</label>
                                <input type="text" class="form-control" name="department" value="@Model.Lecturer.Department" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Date Joined</label>
                                <input type="date" class="form-control" name="dateJoined" value="@Model.Lecturer.DateJoined.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <select class="form-control" name="isActive">
                                    <option value="true" selected="@Model.Lecturer.IsActive">Active</option>
                                    <option value="false" selected="@(!Model.Lecturer.IsActive)">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Approve Claim Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ApproveClaim" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve the claim for <strong id="approveClaimMonth"></strong>?</p>
                    <input type="hidden" id="approveClaimId" name="claimId" />
                    <div class="mb-3">
                        <label for="approvalNotes" class="form-label">Approval Notes (Optional)</label>
                        <textarea id="approvalNotes" name="approvalNotes" class="form-control" rows="3"
                                  placeholder="Add any notes about this approval..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Claim Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="RejectClaim" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject the claim for <strong id="rejectClaimMonth"></strong>?</p>
                    <input type="hidden" id="rejectClaimId" name="claimId" />
                    <div class="mb-3">
                        <label for="rejectionNotes" class="form-label">Rejection Reason *</label>
                        <textarea id="rejectionNotes" name="rejectionNotes" class="form-control" rows="3"
                                  placeholder="Please provide the reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Approve modal handler
            var approveModal = document.getElementById('approveModal');
            approveModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                var claimId = button.getAttribute('data-claim-id');
                var claimMonth = button.getAttribute('data-claim-month');

                document.getElementById('approveClaimId').value = claimId;
                document.getElementById('approveClaimMonth').textContent = claimMonth;
            });

            // Reject modal handler
            var rejectModal = document.getElementById('rejectModal');
            rejectModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                var claimId = button.getAttribute('data-claim-id');
                var claimMonth = button.getAttribute('data-claim-month');

                document.getElementById('rejectClaimId').value = claimId;
                document.getElementById('rejectClaimMonth').textContent = claimMonth;
            });

            // Form validation for reject claim
            document.querySelector('form[asp-action="RejectClaim"]').addEventListener('submit', function(e) {
                var notes = document.getElementById('rejectionNotes').value;
                if (!notes || notes.trim() === '') {
                    e.preventDefault();
                    alert('Please provide a rejection reason.');
                    document.getElementById('rejectionNotes').focus();
                }
            });
        });
    </script>
}