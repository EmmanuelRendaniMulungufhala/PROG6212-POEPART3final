@using WebApplication1.Models
@using WebApplication1.ViewModels
@model CreateUserViewModel
@{
    ViewData["Title"] = "Create New User";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-user-plus me-2"></i>Create New User
                </h2>
                <a asp-action="LecturerManagement" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Lecturers
                </a>
            </div>
            <p class="text-muted">Add new lecturers or staff members to the system</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-circle me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateUser" method="post" id="createUserForm">
                        @Html.AntiForgeryToken()

                        <!-- Personal Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="border-bottom pb-2">
                                    <i class="fas fa-id-card me-2"></i>Personal Information
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">First Name *</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Last Name *</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email Address *</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <small class="form-text text-muted">This will be used for login and notifications</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Employment Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="border-bottom pb-2">
                                    <i class="fas fa-briefcase me-2"></i>Employment Information
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                                    <input asp-for="EmployeeId" class="form-control" placeholder="Enter employee ID" />
                                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label">Department</label>
                                    <input asp-for="Department" class="form-control" placeholder="Enter department" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DateJoined" class="form-label">Date Joined *</label>
                                    <input asp-for="DateJoined" type="date" class="form-control" required />
                                    <span asp-validation-for="DateJoined" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">User Role *</label>
                                    <select asp-for="Role" class="form-control" required>
                                        <option value="">Select Role</option>
                                        <option value="@UserRole.Lecturer">Lecturer</option>
                                        <option value="@UserRole.ProgrammeCoordinator">Programme Coordinator</option>
                                        <option value="@UserRole.AcademicManager">Academic Manager</option>
                                        <option value="@UserRole.HR">HR Staff</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Account Settings -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="border-bottom pb-2">
                                    <i class="fas fa-cog me-2"></i>Account Settings
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Password *</label>
                                    <input asp-for="Password" type="password" class="form-control"
                                           placeholder="Enter temporary password" required
                                           pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$"
                                           title="Password must contain at least 8 characters, including uppercase, lowercase, and numbers" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Minimum 8 characters with uppercase, lowercase, and numbers
                                    </small>
                                    <div class="password-strength mt-2">
                                        <div class="progress" style="height: 5px;">
                                            <div class="progress-bar" id="passwordStrength" style="width: 0%"></div>
                                        </div>
                                        <small id="passwordFeedback" class="form-text"></small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password *</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control"
                                           placeholder="Confirm password" required />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <div class="mt-2">
                                        <small id="passwordMatch" class="form-text"></small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="SendWelcomeEmail" class="form-check-input" type="checkbox" checked>
                                        <label class="form-check-label" asp-for="SendWelcomeEmail">
                                            Send welcome email with login instructions
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RequirePasswordChange" class="form-check-input" type="checkbox" checked>
                                        <label class="form-check-label" asp-for="RequirePasswordChange">
                                            Require password change on first login
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                    <label class="form-check-label" asp-for="IsActive">
                                        Activate account immediately
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                        <i class="fas fa-redo me-1"></i>Reset Form
                                    </button>
                                    <div>
                                        <a asp-action="LecturerManagement" class="btn btn-secondary me-2">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </a>
                                        <button type="submit" class="btn btn-primary" id="submitBtn">
                                            <i class="fas fa-user-plus me-1"></i>Create User
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Help Card -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Quick Help
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>User Roles:</h6>
                            <ul class="list-unstyled small">
                                <li><strong>Lecturer:</strong> Can submit claims and view personal history</li>
                                <li><strong>Programme Coordinator:</strong> Can review and approve claims</li>
                                <li><strong>Academic Manager:</strong> Can manage multiple programmes</li>
                                <li><strong>HR Staff:</strong> Full system access and user management</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Best Practices:</h6>
                            <ul class="list-unstyled small">
                                <li>✓ Use institutional email addresses</li>
                                <li>✓ Set temporary passwords that meet complexity requirements</li>
                                <li>✓ Send welcome emails for new users</li>
                                <li>✓ Require password change on first login</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set default date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('DateJoined').value = today;

            // Password strength indicator
            const passwordInput = document.getElementById('Password');
            const strengthBar = document.getElementById('passwordStrength');
            const feedback = document.getElementById('passwordFeedback');
            const confirmInput = document.getElementById('ConfirmPassword');
            const matchText = document.getElementById('passwordMatch');

            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 0;
                let feedbackText = '';

                // Check password strength
                if (password.length >= 8) strength++;
                if (/[a-z]/.test(password)) strength++;
                if (/[A-Z]/.test(password)) strength++;
                if (/[0-9]/.test(password)) strength++;
                if (/[^A-Za-z0-9]/.test(password)) strength++;

                // Update progress bar and feedback
                switch(strength) {
                    case 0:
                    case 1:
                        strengthBar.style.width = '20%';
                        strengthBar.className = 'progress-bar bg-danger';
                        feedbackText = 'Very Weak';
                        break;
                    case 2:
                        strengthBar.style.width = '40%';
                        strengthBar.className = 'progress-bar bg-warning';
                        feedbackText = 'Weak';
                        break;
                    case 3:
                        strengthBar.style.width = '60%';
                        strengthBar.className = 'progress-bar bg-info';
                        feedbackText = 'Good';
                        break;
                    case 4:
                        strengthBar.style.width = '80%';
                        strengthBar.className = 'progress-bar bg-primary';
                        feedbackText = 'Strong';
                        break;
                    case 5:
                        strengthBar.style.width = '100%';
                        strengthBar.className = 'progress-bar bg-success';
                        feedbackText = 'Very Strong';
                        break;
                }

                feedback.textContent = feedbackText;
                checkPasswordMatch();
            });

            confirmInput.addEventListener('input', checkPasswordMatch);

            function checkPasswordMatch() {
                const password = passwordInput.value;
                const confirm = confirmInput.value;

                if (confirm === '') {
                    matchText.textContent = '';
                    matchText.className = 'form-text';
                } else if (password === confirm) {
                    matchText.textContent = '✓ Passwords match';
                    matchText.className = 'form-text text-success';
                } else {
                    matchText.textContent = '✗ Passwords do not match';
                    matchText.className = 'form-text text-danger';
                }
            }

            // Form submission validation
            document.getElementById('createUserForm').addEventListener('submit', function(e) {
                const password = passwordInput.value;
                const confirm = confirmInput.value;

                if (password !== confirm) {
                    e.preventDefault();
                    alert('Passwords do not match. Please confirm your password.');
                    confirmInput.focus();
                    return false;
                }

                // Show loading state
                const submitBtn = document.getElementById('submitBtn');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Creating User...';
            });
        });

        function resetForm() {
            if (confirm('Are you sure you want to reset the form? All entered data will be lost.')) {
                document.getElementById('createUserForm').reset();
                document.getElementById('DateJoined').value = new Date().toISOString().split('T')[0];
                document.getElementById('passwordStrength').style.width = '0%';
                document.getElementById('passwordFeedback').textContent = '';
                document.getElementById('passwordMatch').textContent = '';
            }
        }

        // Auto-format phone number
        document.getElementById('PhoneNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 10) {
                if (value.length >= 6) {
                    value = value.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
                } else if (value.length >= 3) {
                    value = value.replace(/(\d{3})(\d{0,3})/, '$1-$2');
                }
                e.target.value = value;
            }
        });
    </script>

    <style>
        .password-strength {
            display: none;
        }

        #Password:not(:placeholder-shown) + .form-text + .password-strength {
            display: block;
        }

        .form-check-label {
            font-weight: normal;
        }

        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .border-bottom {
            border-color: #e3e6f0 !important;
        }
    </style>
}