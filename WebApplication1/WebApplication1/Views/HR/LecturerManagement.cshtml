@model List<ApplicationUser>
@{
    ViewData["Title"] = "Lecturer Management";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-users me-2"></i>Lecturer Management
                </h2>
                <a asp-action="CreateUser" class="btn btn-primary">
                    <i class="fas fa-user-plus me-1"></i>Create New User
                </a>
            </div>
            <p class="text-muted">Manage lecturer accounts and status</p>
        </div>
    </div>
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Lecturers (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Employee ID</th>
                                <th>Department</th>
                                <th>Date Joined</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                <tr>
                                    <td>@lecturer.FullName</td>
                                    <td>@lecturer.Email</td>
                                    <td>@lecturer.EmployeeId</td>
                                    <td>@lecturer.Department</td>
                                    <td>@lecturer.DateJoined.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (lecturer.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="LecturerDetails" asp-route-id="@lecturer.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (lecturer.IsActive)
                                        {
                                            <a asp-action="UpdateLecturerStatus" asp-route-id="@lecturer.Id" asp-route-isActive="false"
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-pause"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="UpdateLecturerStatus" asp-route-id="@lecturer.Id" asp-route-isActive="true"
                                               class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-play"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No lecturers found</h5>
                </div>
            }
        </div>
    </div>
</div>