@model List<ClaimModel>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-list me-2"></i>My Claims
            </h2>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Claim History</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus-circle me-1"></i>New Claim
            </a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.FormattedMonth</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>@claim.TotalAmount.ToString("C")</td>
                                    <td>
                                        <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                    </td>
                                    <td>@claim.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No claims submitted yet</h5>
                    <p class="text-muted">Get started by submitting your first claim</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i>Submit First Claim
                    </a>
                </div>
            }
        </div>
    </div>
</div>